<Window x:Class="ClientDesktop.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientDesktop"
        mc:Ignorable="d"
        Title="Messenger 1.0" Height="500" Width="300">
    <Grid Uid="grdMain">
        <StackPanel Margin="5">
            <ListView ItemsSource="{Binding Messages}" MaxHeight="250"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding CurrentMessage}" Width="150"/>
                <Button Content="Отправить" Command="{Binding SendMessageCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>